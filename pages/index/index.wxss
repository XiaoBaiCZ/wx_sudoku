/* pages/index/index.wxss */
.button {
  width: 640rpx;
  justify-content: space-around;
  margin-top: 48rpx;
}

.btn {
  width: 192rpx;
  line-height: 64rpx;
  text-align: center;
  border-style: solid;
  border-width: 1rpx;
  border-radius: 16rpx;
  border-color: #333333;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.3);
  background-color: #ffffff;
}

.btn:active {
  box-shadow: 0 0 16rpx rgba(0, 0, 0, 0.3);
  background-color: #efefef;
}

.btn-reset {
  color: #33ff33;
}

.btn-clear {
  color: #0fa7dc;
}

.btn-commit {
  color: #ff3333;
}

/*  */

.number {
  margin-top: 48rpx;
  max-width: 635rpx;
  background-color: #ffffff;
}

.number-item {
  align-items: center;
  justify-content: center;
  border-style: solid;
  border-color: #333333;
  border-width: 1rpx;
  border-left-width: 0;
}

.number-item:active {
  color: #ffffff;
  background-color: #ff3333;
}

/*  */

.sudoku {
  flex-wrap: wrap;
  max-width: 640rpx;
  margin-top: 128rpx;
  justify-content: center;
  background-color: #ffffff;
}

.sudoku-item {
  align-items: center;
  justify-content: center;
  border-style: solid;
  border-color: #333333;
  border-width: 0;
  border-top-width: 1rpx;
  border-right-width: 1rpx;
}

.sudoku-item-active {
  color: #ff3333 !important;
  font-weight: 800;
  background-color: rgba(0, 0, 0, 0.3) !important;
}

.sudoku-item-found {
  color: #0fa7dc !important;
  background-color: rgba(255, 0, 0, 0.3) !important;
}

.sudoku-item-border-l {
  border-left-width: 1rpx !important;
}

.sudoku-item-border-b {
  border-bottom-width: 1rpx !important;
}

.sudoku-item-border-on-r {
  border-right-color: #ff3333 !important;
}

.sudoku-item-border-on-t {
  border-top-color: #ff3333 !important;
}